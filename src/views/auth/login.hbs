<h2>Login</h2> 

<form method="POST">

    <div class="form-group">
        <label for="" class="form-label">Email</label> 
        <input name="email" type="text" class="form-control" value="{{loginData.email}}"> 

        {{#if errors.email}} 
        <span class="text-danger small">{{errors.email.message}}</span> 
        {{/if}} 
    </div> 

    <div class="form-group">
        <label for="" class="form-label">Password</label> 
        <input name="password" type="text" class="form-control"> 

        {{#if errors.password}} 
        <span class="text-danger small">{{errors.password.message}}</span> 
        {{/if}} 
    </div> 

    {{#if errors.login}} 
    <span class="text-danger small">{{errors.login.message}}</span> 
    {{/if}} 

    <div class="buttons mt-3">
        <button type="submit" class="btn btn-outline-success">Login</button> 
    </div> 

</form> 
