

<div class="row"> 
    <div class="col-md-3"> 
        <div class="image-holder image-holder-profile rounded"> 
            <img src="{{userData.imageUrl}}" alt="">
        </div> 

        {{#if (isNotCurrentUser user.id userData._id)}}
        <div class="button-group mt-3">
            <a href="/messages/users/{{userData._id}}/conversation" class="btn btn-outline-success d-block">Send Message</a> 
        </div>
        {{/if}} 

        
    </div>

    <div class="col-md-7"> 
        <dl class="profile-info d-flex mt-2"> 
            <div class=""> 
                <dt>City</dt><dd class="">{{userData.city}}</dd>
            </div> 
            <div class="ms-3"> 
                <dt>Age</dt><dd class="">{{userData.age}}</dd> 
            </div> 
            <div class="ms-3"> 
                <dt>Gender</dt><dd class="">{{capitalize userData.gender}}</dd> 
            </div>
        </dl> 

        <h2 class="h4 mb-0">{{userData.username}}</h2> 
        <p>User Profile</p>  

