

<div class="row"> 
    <div class="col-md-3">
        <div class="image-holder image-holder-profile"> 
            <img src="{{userData.imageUrl}}" alt="">
        </div> 
    </div>

    <div class="col-md-7"> 
        <h2 class="h4">{{userData.username}}</h2> 
        <p>User Profile</p>  
        <dl class="profile-info"> 
            <div class="d-flex">
                <dt>Description</dt><dd class="ms-2">{{userData.description}}</dd> 
            </div> 
            <div class="d-flex">
                <dt>City</dt><dd class="ms-2">{{userData.city}}</dd>
            </div> 
            <div class="d-flex">
                <dt>Age</dt><dd class="ms-2">{{age}}</dd> 
            </div>
        </dl> 

        {{#if (isNotCurrentUser user.id userData._id)}}
        <div class="button-group">
            <a href="/messages/users/{{userData._id}}/conversation" class="btn btn-outline-success">Send Message</a> 
        </div>
        {{/if}} 
    </div> 
</div>
