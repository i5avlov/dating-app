<h2>Edit Profile</h2> 

<form method="POST">
    <div class="form-group">
        <label for="" class="form-label">Username</label> 
        <input name="username" type="text" class="form-control" value="{{updateData.username}}"> 

        {{#if errors.username}} 
        <span class="text-danger small">{{errors.username.message}}</span>
        {{/if}}
    </div> 

    <div class="form-group">
        <label for="" class="form-label">Image Url</label> 
        <input name="imageUrl" type="text" class="form-control" value="{{updateData.imageUrl}}"> 

        {{#if errors.imageUrl}} 
        <span class="text-danger small">{{errors.imageUrl.message}}</span>
        {{/if}}
    </div> 

    <div class="form-group">
        <label for="" class="form-label">Description</label> 
        <textarea name="description" type="text" class="form-control">{{updateData.description}}</textarea>

        {{#if errors.description}} 
        <span class="text-danger small">{{errors.description.message}}</span> 
        {{/if}}
    </div> 

    <div class="form-group">
        <label for="" class="form-label">Birthdate</label> 
        <input name="dateOfBirth" type="date" class="form-control" value="{{updateData.dateOfBirth}}"> 

        {{#if errors.dateOfBirth}} 
        <span class="text-danger small">{{errors.dateOfBirth.message}}</span>
        {{/if}}
    </div> 

    <div class="form-group">
        <label for="" class="form-label">Gender</label> 
        <select name="gender" type="text" class="form-control">
            {{#each genders}}
            <option value="{{name}}" {{markOnEqual name ../updateData.gender "selected"}}>{{capitalize name}}</option> 
            {{/each}}
        </select>

        {{#if errors.gender}} 
        <span class="text-danger small">{{errors.gender.message}}</span>
        {{/if}}
    </div> 

    <div class="form-group">
        <label for="" class="form-label">City</label> 
        <select name="city" type="text" class="form-control">
            {{#each cities}}
            <option value="{{name}}" {{markOnEqual name ../updateData.city "selected"}}>{{capitalize name}}</option> 
            {{/each}}
        </select>

        {{#if errors.city}} 
        <span class="text-danger small">{{errors.city.message}}</span>
        {{/if}}
    </div> 

    <div class="buttons mt-3">
        <button type="submit" class="btn btn-outline-success">Edit Profile</button> 
    </div>
</form> 
